@page
@model EFCoreMvcProject.Pages.Account.AdminLogInPortalModel
@{
    ViewData["Title"] = "Admin Login Portal";
}

<h2 class="text-primary">
    Admin Login Portal
</h2>
<hr />
<form method="post" class="mt-3">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="AdminLogInModel.Email"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="AdminLogInModel.Email" placeholder="Email..." />
            <span asp-validation-for="AdminLogInModel.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="AdminLogInModel.Password"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="AdminLogInModel.Password" placeholder="Password..." />
            <span asp-validation-for="AdminLogInModel.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="AdminLogInModel.RememberMe">
                <input asp-for="AdminLogInModel.RememberMe">
                @Html.DisplayNameFor(x => x.AdminLogInModel.RememberMe)
            </label>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-success">Log in</button>
            <a asp-page="/Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}